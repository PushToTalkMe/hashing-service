{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/dist/*"]
    }
  },
  "references": [{ "path": "../shared" }],
  "include": ["src/**/*.ts", "../shared/*"],
  "exclude": ["node_modules", "dist"]
}
